{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./lib",
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "lib": ["es2015", "ES2021.WeakRef"],
    "types": ["node", "mocha"],
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "esModuleInterop": true
  }
}
